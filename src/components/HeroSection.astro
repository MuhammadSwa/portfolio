<section class="relative min-h-[80vh] flex items-center justify-center overflow-hidden bg-gradient-to-br from-slate-950 via-slate-900 to-teal-950">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="dental-pattern" x="0" y="0" width="60" height="60" patternUnits="userSpaceOnUse">
          <path d="M30 5 C20 5 15 15 15 25 C15 35 20 45 25 50 C27 52 28 55 30 55 C32 55 33 52 35 50 C40 45 45 35 45 25 C45 15 40 5 30 5 Z" 
                fill="none" stroke="currentColor" stroke-width="1" class="text-white"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#dental-pattern)"/>
    </svg>
  </div>
  
  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-t from-slate-950/50 to-transparent"></div>
  
  <!-- Content -->
  <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
    <div class="mb-6">
      <span class="inline-block px-4 py-2 bg-teal-500/20 border border-teal-400/30 rounded-full text-teal-300 text-sm font-medium backdrop-blur-sm">
        ðŸ¦· Clinical Excellence Portfolio
      </span>
    </div>
    
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-serif font-bold text-white mb-6 leading-tight">
      Dr. <span class="text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-cyan-300">Zahrawi</span>
    </h1>
    
    <p class="text-xl md:text-2xl text-slate-300 mb-4 font-light">
      Doctor of Dental Surgery
    </p>
    
    <p class="text-lg text-slate-400 max-w-2xl mx-auto mb-10 leading-relaxed">
      Documenting clinical cases with precision and care. Explore my portfolio of restorations, endodontics, fixed prosthodontics, and more.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="#cases" 
         class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-teal-500 to-cyan-500 text-white font-semibold rounded-xl hover:from-teal-600 hover:to-cyan-600 transition-all duration-300 shadow-lg shadow-teal-500/25 hover:shadow-teal-500/40 hover:-translate-y-0.5">
        <span>View Cases</span>
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
      
      <a href="#about" 
         class="inline-flex items-center justify-center px-8 py-4 bg-white/10 text-white font-semibold rounded-xl border border-white/20 hover:bg-white/20 transition-all duration-300 backdrop-blur-sm">
        <span>About Me</span>
      </a>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
