---
interface CategoryStat {
  id: string;
  name: string;
  icon: string;
  count: number;
}

interface Props {
  totalCases: number;
  categoryStats: CategoryStat[];
}

const { totalCases, categoryStats } = Astro.props;

// Filter out categories with zero count
const nonZeroCategoryStats = categoryStats.filter(stat => stat.count > 0);
---

<section class="bg-slate-900 py-16 border-b border-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-2xl md:text-3xl font-serif font-semibold text-slate-100 mb-2">
        Case Statistics
      </h2>
      <p class="text-slate-400">Overview of documented clinical cases</p>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-7 gap-4">
      <!-- Total Cases -->
      <div class="col-span-2 md:col-span-1 bg-gradient-to-br from-teal-500 to-cyan-600 rounded-2xl p-6 text-white shadow-lg shadow-teal-500/20">
        <div class="text-4xl font-bold mb-1">{totalCases}</div>
        <div class="text-teal-100 text-sm font-medium">Total Cases</div>
      </div>
      
      <!-- Category Stats -->
      {nonZeroCategoryStats.map((stat) => (
        <div class="bg-slate-800 rounded-2xl p-4 border border-slate-700 hover:border-teal-500 hover:shadow-md hover:shadow-teal-500/20 transition-all duration-300 group">
          <div class="text-2xl mb-2">{stat.icon}</div>
          <div class="text-2xl font-bold text-slate-100 group-hover:text-teal-400 transition-colors">{stat.count}</div>
          <div class="text-slate-400 text-xs font-medium truncate">{stat.name}</div>
        </div>
      ))}
    </div>
  </div>
</section>
